        android:onClick="efetuarLogout"
        app:layout_constraintBottom_toTopOf="@+id/cardNomeQuestao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.991"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icons8_emergency_exit_50__1_"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardNomeQuestao"
        android:layout_width="412dp"
        android:layout_height="124dp"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="20dp"
        android:background="@color/cor_cards_Padrao"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/cardAlternativaQuestaoA"
